<?xml version="1.0" encoding="utf-8"?>
<net.suweya.photopicker.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <net.suweya.photopicker.widget.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fl_check_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingBottom="10dp"
        android:paddingEnd="5.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5.5dp"
        android:paddingStart="10dp"
        android:paddingTop="5.5dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/check_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/ic_check_box_outline_blank_black_24dp"
            app:backgroundTint="?colorAccent"/>
    </FrameLayout>

</net.suweya.photopicker.widget.SquareFrameLayout>